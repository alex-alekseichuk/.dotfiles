set tabstop=4       " Set the width of a tab character to 4 spaces
set shiftwidth=4    " Set the number of spaces to use for auto-indent
set expandtab       " Convert tabs to spaces
set softtabstop=4   " Make backspace treat tabs as 4 spaces

set guifont=Monospace\ 16
set clipboard=unnamedplus
set noerrorbells
set novisualbell
set visualbell t_vb=
set statusline=%F

set grepprg=rg\ --vimgrep

let g:netrw_liststyle = 3  " Use tree-style directory listing
let g:netrw_browse_split = 4  " Open in a new tab
let g:netrw_fold = 1          " Automatically fold directories

